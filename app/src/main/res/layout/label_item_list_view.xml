<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="100"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="5dp"
    >

    <LinearLayout
        android:id="@+id/layout_textViews_ofItemListView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/tv_id_recView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_id"
            style="@style/subItem_myListView"
            android:visibility="gone"
        />
        <TextView
            android:id="@+id/tv_date_produced_recView"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="@string/label_date"
            style="@style/subItem_myListView"
        />
        <TextView
            android:id="@+id/tv_time_produced_recView"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="@string/hour"
            style="@style/subItem_myListView"
        />
        <TextView
            android:id="@+id/tv_name_product_recView"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:text="@string/label_product"
            style="@style/subItem_myListView"
        />
        <TextView
            android:id="@+id/tv_count_recView"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="17"
            android:text="@string/label_count"
            style="@style/subItem_myListView"
        />
    </LinearLayout>
</LinearLayout>