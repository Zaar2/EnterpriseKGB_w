<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@color/bg_selector</item>
        <item name="android:fontFamily">@font/headland_one</item>
        <item name="strokeColor">@color/stroke_selector</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">48dp</item>
        <item name="android:textSize">@dimen/size_of_text_button_panel</item>
        <item name="android:layout_margin">@dimen/margin_button</item>
    </style>
    <style name="buttonMaterial" parent="@style/ThemeOverlay.Material3.Button">
        <item name="android:textColor">@color/text_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@color/bg_selector</item>
        <item name="android:fontFamily">@font/headland_one</item>
        <item name="strokeColor">@color/stroke_selector</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">48dp</item>
        <item name="android:textSize">@dimen/size_of_text_button_panel</item>
        <item name="android:layout_margin">@dimen/margin_button</item>
    </style>
    <style name="imgButton" parent="@style/Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="backgroundTint">@color/bg_selector</item>
        <item name="android:layout_margin">@dimen/margin_button</item>
    </style>
    <style name="button_inactive" parent="button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/button_blocked</item>
    </style>
    <style name="button_pressed" parent="button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/bg_selector_pressed</item>
    </style>
    <style name="button_active" parent="button">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="button_small" parent="button">
        <item name="android:textSize">@dimen/size_of_text_button_small</item>
        <item name="android:layout_margin">@dimen/margin_button_small</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">35dp</item>
    </style>
    <style name="button_shops_mainMenu" parent="button">
        <item name="android:textSize">@dimen/size_subItem_listView_mainMenu</item>
        <item name="textAllCaps">true</item>
        <item name="android:paddingStart">@dimen/margin_listView</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/text_selector_button_start</item>
    </style>
</resources>